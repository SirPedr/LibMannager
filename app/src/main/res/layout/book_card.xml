<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@android:color/white">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/constraintLayout">

            <TextView
                    android:text="Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/book_title"
                    android:textColor="@android:color/black" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="30sp"/>
            <TextView
                    android:text="- "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView5"
                    android:textColor="@android:color/black"
                    tools:text="-" android:textAlignment="textEnd" app:layout_constraintStart_toEndOf="@+id/book_title"
                    app:layout_constraintTop_toTopOf="@+id/book_title"
                    app:layout_constraintBottom_toBottomOf="@+id/book_title" app:layout_constraintVertical_bias="0.727"
                    android:layout_marginStart="8dp"/>
            <TextView
                    android:text="Edition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/book_ed"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toEndOf="@+id/textView5"
                    app:layout_constraintTop_toTopOf="@+id/textView5"
                    app:layout_constraintBottom_toBottomOf="@+id/textView5" app:layout_constraintVertical_bias="0.727"
                    android:layout_marginStart="4dp" android:textSize="30sp"/>
            <TextView
                    android:text="Editora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/book_editora"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/book_title"
                    android:textStyle="italic" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/textView5" android:textSize="20sp"/>
            <TextView
                    android:text="Author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/book_author"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/book_editora" android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
                    android:textSize="15sp"/>
            <TextView
                    android:text="- "
                    android:layout_width="9dp"
                    android:layout_height="wrap_content" android:id="@+id/textView9"
                    android:textColor="@android:color/black"
                    tools:text="-" android:textAlignment="center"
                    app:layout_constraintStart_toEndOf="@+id/book_author"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/book_author"
                    app:layout_constraintTop_toTopOf="@+id/book_author" app:layout_constraintVertical_bias="0.0"
                    android:textSize="15sp"/>
            <TextView
                    android:text="YYYY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/book_year"
                    app:layout_constraintTop_toTopOf="@+id/textView9"
                    app:layout_constraintBottom_toBottomOf="@+id/textView9"
                    app:layout_constraintStart_toEndOf="@+id/textView9" android:layout_marginStart="8dp"
                    android:textColor="@android:color/black" app:layout_constraintVertical_bias="0.0"
                    android:textSize="15sp"/>
        </android.support.constraint.ConstraintLayout>
        <ImageView
                android:layout_width="110dp"
                android:layout_height="137dp" app:srcCompat="@android:drawable/ic_menu_info_details"
                android:id="@+id/book_thumbnail"
                app:layout_constraintStart_toEndOf="@+id/constraintLayout"
                android:layout_marginStart="40dp"
                app:layout_constraintTop_toTopOf="@+id/constraintLayout"
                app:layout_constraintBottom_toBottomOf="@+id/constraintLayout" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="1.0"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>